#include <cs50.h>
#include <stdio.h>

int main(void)
{
    int h;
    do
    {
        h = get_int("Height: ");
         
    }while (h < 1 || h > 8);
    
    for ( int n = 0; n < h; n++)
    {
        //print spaces
       for(int space=h-1-n;space>0;space--){
           printf(" ");
       }
       for(int hash=0;hash<=n;hash++){
           printf("#");
       }
       printf("  ");
       for(int hash=0;hash<=n;hash++){
           printf("#");
       }
       printf("\n");
    }
}
